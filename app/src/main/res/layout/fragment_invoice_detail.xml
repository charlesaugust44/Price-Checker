<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InvoiceDetailFragment">

    <TextView
        android:id="@+id/text_company"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/highcontrast"
        android:text="SUPERMERCADOS BH COMERCIO ALIMEN LTDA" />

    <TextView
        android:id="@+id/text_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/highcontrast"
        android:text="3122 0404 6413 7600 9001 6507 5000 0899 5598 4916 3969" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/highcontrast"
        android:text="AV BRASILIA, 3140, SAO BENEDITO - SANTA LUZIA, MG" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/highcontrast"
            android:text="2022-08-01 08:22:33"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/highcontrast"
            android:layout_marginEnd="5dp"
            android:textAlignment="textEnd"
            android:text="R$ 785,32"
            android:layout_weight="1"/>

    </LinearLayout>

    <ListView
        android:id="@+id/list_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>