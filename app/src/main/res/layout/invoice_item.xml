<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <TextView
            android:id="@+id/text_companyName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="2"
            android:text="SUPERMERCADOS BH COMERCIO DE ALIMENTOS S.A"
            android:textColor="@color/highcontrast"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_invoiceTotal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="R$ 722,32"
            android:textColor="@color/highcontrast"
            android:textAlignment="textEnd"
            android:textSize="19sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_invoiceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:text="25/08/2023 15:45:22"
            android:textColor="@color/highcontrast"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_invoiceItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:layout_weight=".5"
            android:text="32 Items"
            android:textColor="@color/highcontrast"
            android:textAlignment="textEnd"/>

    </LinearLayout>

</LinearLayout>